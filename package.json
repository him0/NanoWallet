{
  "name": "NanoWallet",
  "version": "1.2.2",
  "description": "Cross-platform lite wallet for NEM",
  "author": "https://github.com/QuantumMechanics",
  "license": "MIT",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-animate": "1.5.7",
    "angular-chart.js": "1.0.0",
    "angular-mocks": "1.5.8",
    "angular-sanitize": "^1.5.8",
    "angular-translate": "2.11.0",
    "angular-ui-router": "^0.3.1",
    "bootstrap": "3.3.6",
    "chart.js": "2.1.6",
    "jquery": "3.0.0",
    "marked": "^0.3.5",
    "merge-stream": "^1.0.0",
    "ng-toast": "2.0.0",
    "ngstorage": "0.3.10"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "electron build/app.js",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"NanoWallet\"",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/NanoWallet-darwin-x64/NanoWallet.app NanoWallet --out=release-builds --overwrite --icon=assets/icons/mac/icon.icns",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "test": "gulp tests browserifyTests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NemProject/NanoWallet.git"
  },
  "keywords": [
    "nem"
  ],
  "bugs": {
    "url": "https://github.com/NemProject/NanoWallet/issues"
  },
  "homepage": "https://github.com/NemProject/NanoWallet#readme",
  "devDependencies": {
    "assert-plus": "^1.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "browserify-ngannotate": "^2.0.0",
    "electron": "^1.4.13",
    "electron-installer-dmg": "^0.2.0",
    "electron-packager": "^8.4.0",
    "electron-winstaller": "^2.5.1",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-notify": "^2.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "vinyl-source-stream": "^1.1.0"
  },
  "main": "build/electron.js"
}
